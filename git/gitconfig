[advice]
	statusHints = false
[alias]
	amend = commit --amend
	b = branch
	ci = commit
	civ = commit --verbose
	co = checkout
	d = diff
	dc = diff --cached
	graph = log --graph --decorate --oneline
	ls-ignored = ls-files --others --ignored --exclude-standard
	remote = remote --verbose
	s = status --short --branch
	sl = stash list
	sp = stash pop
	unstage = reset HEAD
[branch]
	autosetupmerge = always
	autosetuprebase = always
[color]
	ui = auto
[core]
	excludesfile = ~/.gitignore_global
[credential]
	helper = osxkeychain
[hub]
	protocol = https
[include]
	path = ~/.gitconfig_user
[push]
	default = simple
